        {% if messages != false %}
            {% for message in messages %}
            <article style="border-bottom:2px solid gray;" class="cat-message">
                <div class="right-part__cat-message">
                    <div class="date-message">{{ message.created_at }}</div>
                    <a class="creator-message">{{ message.cat }}</a>
                    <div class="content-message">{{ message.content }}</div>
                </div>
            </article>
            {% endfor %}
        {% endif %}